<form action="/addDM" method="POST" style="margin-left: 80px">
  Enter username <input type="text" name="USERNAME" class="form-control" style="width: 10%" required><br>
  Enter password <input type="password" name="PASSWORD" class="form-control" style="width: 10%" required><br>
  <button type="submit" class="btn btn-default">Create Account</button>
</form>

